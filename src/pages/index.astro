<style lang="scss">
    .text-section {
        background-color: var(--text-section);
        border: 1px solid var(--text-section-border);
        max-width: 75vw;
        text-wrap: wrap;
    }

    .text-section-header {
        margin-top: 30px;
    }

    main {
        max-width: 97vw;
        margin-inline: auto;
        height: 100vh;
        background-color: var(--webpage-color);
    }
</style>
