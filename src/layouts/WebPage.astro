---
const {Title} = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <link rel="icon" type="image/x-icon" href="/icon.png"/>
        <meta name="viewport" content="width=device-width"/>
        <meta name="generator" content={Astro.generator}/>
        <title>{`rhpidfyre.io | ${Title}`}</title>
    </head>
    <body>
        <slot/>
    </body>
</html>

<style lang="scss" is:global>
    @forward "../scss/fonts";

    :root {
        --webpage-color: white;
        --header-color: white;
        --header-border-color: white;

        @media (prefers-color-scheme: dark) {
            --webpage-color:       hsl(240, 14%, 7%);
            --header-color:        rgb(40, 40, 40);
            --header-border-color: #0056cc;

        }
    }

    html {
        color-scheme: light dark;
    }
    body {
        background-color: var(--webpage-color);
        padding: 0;
        margin: 0;
    }
    h1, h2, h3, h4, h5, h6, p {
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
</style>
